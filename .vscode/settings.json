{
  "cSpell.enableFiletypes": ["shellscript", "toml"],
  "esbonio.sphinx.confDir": "${workspaceFolder}/doc/source",
  "esbonio.server.enabled": false,
  "restructuredtext.linter.disabledLinters": ["rstcheck", "rst-lint"],
  "files.watcherExclude": {
    "**/.venv/**": true
  },
  "todo-tree.filtering.excludeGlobs": ["**/.venv/*/**"],
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
